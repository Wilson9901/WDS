<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_wds" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.wds</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="documents_product.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_documents_block')]//div[hasclass('content-group')]//div[hasclass('row', 'mt16')]" position="after">
                <div class="row">
                    <label class="o_form_label col-lg-3" for="import_folder" string="Imported Workspace"/>
                    <field name="import_folder" attrs="{'required' : [('documents_product_settings', '=', True)]}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>